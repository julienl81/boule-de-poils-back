{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container w-50 mx-auto">
    <h1>{{ user.pseudo }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ user.active ? 'Actif' : 'Inactif' }}</td>
            </tr>
            <tr>
                <th>Rôle(s)</th>
                <td>{{ user.roles|join(', ')  }}</td>
            </tr>
                  <tr>
                <th>Association</th>
                <td>{% if user.association is null %}{% else %} {{ user.association.name }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_back_user_index') }}">Retour à la liste</a>

    <a class="btn btn-warning" href="{{ path('app_back_user_edit', {'id': user.id}) }}">Mettre à jour</a>

    <p>{{ include('back/user/_delete_form.html.twig') }}<p/>
    </div>
{% endblock %}
